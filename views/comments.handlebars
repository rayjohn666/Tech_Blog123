<main>
  {{!-- Display the post content --}}
  <article class="post">
    <h2>{{title}}</h2>
    <p>{{content}}</p>
  </article>

  {{!-- Display the comments section --}}
  <section class="comments">
    <h3>Comments</h3>
    {{!-- Display the comment form --}}
    <form id="new-comment-form">
      
      <input name="comment-body" id="comment-box" rows="3" placeholder="Enter your comment here"></input>
      <button id="post" class="comment-button">Post Comment</button>
    </form>

  <!-- Assuming you have a container with an id of 'commentsContainer' for displaying comments -->
<div id="commentsContainer">
  <!-- Loop through the comments data and render each comment using the commentTemplate -->
  {{#each comments}}
    <div class="card">
      <div class="card-header">
        {{user}}
      </div>
      <div class="card-body">
        <p class="card-text">{{comment}}</p>
      </div>
    </div>
  {{/each}}
</div>

<!-- Assuming you have a template with an id of 'commentTemplate' for rendering individual comments -->
<script id="commentTemplate" type="text/x-handlebars-template">
  <div class="card">
    <div class="card-header">
      {{user}}
    </div>
    <div class="card-body">
      <p class="card-text">{{comment}}</p>
    </div>
  </div>
</script>
</main>

<script src="/js/comments.js"></script>